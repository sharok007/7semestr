CC=g++
CFLAGS=-c -Wall
LDFLAGS= -pthread -std=c++11
SOURCES=chat_client.c chat_clnt.c chat_xdr.c
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=chat_client

all: $(SOURCES) $(EXECUTABLE)
	
$(EXECUTABLE): $(OBJECTS) 
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@

clean:
	rm -rf *.o chat_client

